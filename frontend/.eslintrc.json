{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "indent": ["warn", 4],
        "space-before-function-paren": ["off"],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "quote-props": "off",
        "react/no-unescaped-entities": "off",
        "no-unused-vars": ["warn"]
    }
}
